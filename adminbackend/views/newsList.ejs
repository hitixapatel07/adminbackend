    <script src="https://cdn.datatables.net/1.10.24/js/dataTables.bootstrap5.min.js"></script>
    <script>
      $(document).ready(function() {
    $('#newsList').DataTable();
    } );

    $(".alert.alert-primary")
   .fadeIn( function() 
   {
      setTimeout( function()
      {
         $(".alert.alert-primary").fadeOut("fast");
      }, 5000);
   });
    </script>
