    <h4 class="text-center">News List</h4>
    <table id="newsList" class="table">
      <thead class="">
        <tr>
          <th scope="col">productName</th>
          <th scope="col">productCategory</th>
          <th scope="col">manufacturer</th>
          <th scope="col">Edit/Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i<newsData.length; i++){ %>
        <tr>
          <th scope="row"><%= newsData[i].productName %></th>
          <td><%= newsData[i].productCategory %></td>
          <td><%= newsData[i].createdDate %></td>
          <td>
            <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#edit<%= newsData[i]._id %>">Edit</button>
            <!-- editArticle Modal -->
            <div class="modal fade" id="edit<%= newsData[i]._id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Edit Inventory</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <form class="card-body" style="width: 30rem;" method="POST" action="/newsList/editNews">
                      <input type="hidden" name="_id" value="<%= newsData[i]._id %>" required>
                      <label for="productName" class="form-label">productName</label>
                      <input type="text" name="productName" class="form-control" id="productName" placeholder="Enter productName" value="<%= newsData[i].productName %>" required>
                      <br>
                      <label for="productCategory" class="form-label">productCategory</label>
                      <input type="text" name="productCategory" class="form-control" id="productCategory" placeholder="Enter productCategory" value="<%= newsData[i].productCategory %>" required>
                      <br>
                      
                      <label for="manufacturer" class="form-label">manufacturer </label>
                      <input type="text" name="manufacturer" class="form-control" id="manufacturer" placeholder="Enter manufacturer" value="<%= newsData[i].manufacturer %>" required>
                      <br>
                      <label for="productImage" class="form-label">product Image Link</label>
                      <input type="text" name="productImage" class="form-control" id="productImage" placeholder="Enter image link" value="<%= newsData[i].productImage %>" required>
                      <br>
                      <label for="stock" class="form-label">stock</label>
                      <input type="text" name="stock" class="form-control" id="stock" placeholder="Enter stock" value="<%= newsData[i].stock %>" required>
                      <br>

                      <label for="unitCost" class="form-label">unitCost</label>
                      <input type="text" name="unitCost" class="form-control" id="unitCost" placeholder="Enter unitCost" value="<%= newsData[i].unitCost %>" required>
                      <br>
                      <label for="dimension" class="form-label">dimension</label>
                      <input type="text" name="dimension" class="form-control" id="dimension" placeholder="Enter dimension" value="<%= newsData[i].dimension %>" required>
                      <br>

                      <label for="purchaseOrders" class="form-label">purchaseOrders</label>
                      <input type="text" name="purchaseOrders" class="form-control" id="purchaseOrders" placeholder="Enter purchaseOrders" value="<%= newsData[i].purchaseOrders %>" required>
                      <br>
                      <label for="nextPurchase" class="form-label">nextPurchase</label>
                      <input type="text" name="nextPurchase" class="form-control" id="nextPurchase" placeholder="Enter nextPurchase" value="<%= newsData[i].nextPurchase %>" required>
                      <br>
                      <label for="createdBy" class="form-label">createdBy</label>
                      <input type="text" name="createdBy" class="form-control" id="createdBy" placeholder="Enter createdBy" value="<%= newsData[i].createdBy %>" required>
                      <br>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                      </div>
                  </form>
                  </div>
                </div>
              </div>
            </div>
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#delete<%= newsData[i]._id %>">Delete</button>
            <!-- deleteArticle Modal -->
            <div class="modal fade" id="delete<%= newsData[i]._id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete Article</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    Are you sure?
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <form method="POST" action="/newsList/deleteNews">
                      <input type="hidden" name="_id" value="<%= newsData[i]._id %>">
                      <button type="submit" method="POST" class="btn btn-primary">Delete</button>
                    </form>
                    
                  </div>
                </div>
              </div>
            </div>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
