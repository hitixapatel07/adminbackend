<% include featureViews/head %>
<div>
    <% include featureViews/menuItemsLoggedIn %>
    <div class="text-center">
      <div class="alert alert-info">
          <span>Admin Name  : <%= user.firstName %>  </span><br>
          <span>Email : <%= user.email %>  </span>
      </div>
  </div>
      <div class="container">
        <% if(msg){ %>
          <div class="text-center">
            
        </div>
        <div class="alert alert-primary" role="alert">
          <h4 class="alert-heading text-center"><%=msg%></h4>
        </div>
        <% } %>
    <div class="mb-3 card shadow ">
        <div class="card-header">
            <h4><%= title %></h4>
          </div>
    <form class="card-body" method="POST" action="/addNews">
        <label for="productName" class="form-label">Product Name</label>
        <input type="text" name="productName" class="form-control" id="productName" placeholder="Enter Peosuct Name" required>
        <br>
        <label for="productCategory" class="form-label">Product Category</label>
        <input type="text" name="productCategory" class="form-control" id="productCategory" placeholder="Enter Peosuct Category" required>
        <br>
        <label for="manufacturer" class="form-label">Manufacturer</label>
        <input type="text" name="manufacturer" class="form-control" id="manufacturer" placeholder="Enter Manufacturer" required>
        <br>
        <label for="productImage" class="form-label">Product Image Link</label>
        <input type="text" name="productImage" class="form-control" id="productImage" placeholder="Enter image link" required>
        <br>
        
        <label for="stock" class="form-label">Stock </label>
        <input type="text" name="stock" class="form-control" id="stock" placeholder="Enter stock" required>
        <br>

        <label for="unitCost" class="form-label">unitCost</label>
        <input type="text" name="unitCost" class="form-control" id="unitCost" placeholder="Enter unitCost" required>
        <br>
        <label for="dimension" class="form-label">dimension</label>
        <input type="text" name="dimension" class="form-control" id="dimension" placeholder="Enter dimension" required>
        <br>

        <label for="purchaseOrders" class="form-label">purchaseOrders</label>
        <input type="text" name="purchaseOrders" class="form-control" id="purchaseOrders" placeholder="Enter purchaseOrders" required>
        <br>

        <label for="nextPurchase" class="form-label">nextPurchase</label>
        <input type="text" name="nextPurchase" class="form-control" id="nextPurchase" placeholder="Enter nextPurchase" required>
        <br>

        <label for="createdBy" class="form-label">createdBy</label>
        <input type="text" name="createdBy" class="form-control" id="createdBy" placeholder="Enter createdBy" required>
        <br>
        
        <button type="submit" class="btn btn-primary">Add</button>
    </form>
</div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
<script>
       $(".alert.alert-primary")
   .fadeIn( function() 
   {
      setTimeout( function()
      {
         $(".alert.alert-primary").fadeOut("fast");
      }, 5000);
   });
</script>
</div>
<% include featureViews/footer %>
